---
import { clubConfig } from '../config/club';
---

<header class="bg-loyal-blue text-white">
  <div class="container mx-auto px-4 py-4">
    <nav class="flex items-center justify-between">
      <div class="flex items-center space-x-4">
        <a href="/" class="flex items-center space-x-3">
          <img
            src="/brand/toastmasters-logo.svg"
            alt="Toastmasters Logo"
            class="h-12 w-auto"
          />
          <span class="font-heading text-xl font-bold">{clubConfig.clubName}</span>
        </a>
      </div>

      <div class="hidden md:flex items-center space-x-6">
        <a href="/" class="hover:text-happy-yellow transition-colors font-body">
          Home
        </a>
        <a href="/resources" class="hover:text-happy-yellow transition-colors font-body">
          Resources
        </a>
        <a
          href={`mailto:${clubConfig.contactEmail}`}
          class="bg-true-maroon hover:bg-opacity-90 px-4 py-2 rounded transition-colors font-body"
        >
          Contact Us
        </a>
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2"
        aria-label="Toggle menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </nav>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-3">
      <a href="/" class="block hover:text-happy-yellow transition-colors font-body">
        Home
      </a>
      <a href="/resources" class="block hover:text-happy-yellow transition-colors font-body">
        Resources
      </a>
      <a
        href={`mailto:${clubConfig.contactEmail}`}
        class="block bg-true-maroon hover:bg-opacity-90 px-4 py-2 rounded transition-colors font-body text-center"
      >
        Contact Us
      </a>
    </div>
  </div>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
